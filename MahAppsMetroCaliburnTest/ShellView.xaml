<mah:MetroWindow x:Class="MahAppsMetroCaliburnTest.ShellView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="ShellView"
                 GlowBrush="Purple"
                 Height="300"
                 Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Column="0"
                Grid.Row="0"
                Name="ShowMetroDialog">Show Metro Dialog</Button>

        <Button Grid.Column="0"
                Grid.Row="1"
                Name="ShowPopupWithSimpleDialog">Simple Dialog Popup</Button>

        <Button Grid.Column="1"
                Grid.Row="1"
                Name="ShowPopupUserControl">Show Dialog</Button>
    </Grid>
</mah:MetroWindow>
